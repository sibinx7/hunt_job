.dashboard-wrapper
  .row
    .small-12.columns
      .dashboard-inner.custom-container
        %h3.p-title
          Receipt for Transaction ID
          = @receipt.transaction_id
        %section
          .result-table
            %table
              %thead
                %tr
                  %th{:colspan => 2} Summary
              %tbody
                %tr
                  %td
                    User
                  %td
                    = @receipt.user.name
                %tr
                  %td
                    Amount
                  %td
                    = "$ #{@receipt.amount}"
                %tr
                  %td
                    Bank
                  %td
                    = @receipt.bank_transaction.name
                %tr
                  %td
                    Transaction Id
                  %td
                    = @receipt.transaction_id

