/ header
.custom-top-header.user-header
  .row
    .small-12.columns
      .custom-container
        .row
          .small-12.columns
            %nav.top-bar.my-top-bar{:data => {:topbar=>"", :options=>""}, :role=>""}
              %ul.title-area
                %li.name
                  %h1
                    %a{:href=>"#"} HuntJob
                %li.toggle-topbar.menu-icon
                  %a{:href=>""}
                    %span
              %section.top-bar-section
                %ul.right
                  %li.active
                    = link_to '<span class="fa fa-plus"></span>&nbsp;Post Project'.html_safe,new_project_path
                  %li
                    = link_to '<span class="fa fa-folder-o"></span>&nbsp;My Projects'.html_safe,projects_path
                  %li
                    %a{:href=>'#'}
                      %span.fa.fa-book
                      Income
                  - if  not user_signed_in?
                    %li.sign-in
                      = link_to "Sign In",new_user_session_path
                  - else
                    %li.sign-in
                      = link_to "Sign Out",destroy_user_session_path,:method => :delete
  /end header
= render 'dashboard/secondary_menu'