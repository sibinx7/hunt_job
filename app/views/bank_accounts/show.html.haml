.dashboard-wrapper
  .row
    .small-12.columns
      .dashboard-inner.custom-container
        .row{"data-equalizer"=>""}
          .small-12.medium-3.large-3.user-side-border.columns{"data-equalizer-watch"=>""}
            = render 'user_extras/sidebar'
          .small-12.medium-5.large-6.columns{"data-equalizer-watch"=>""}
            %p#notice= notice
            .quick-view
              %h6
                My Bank Details
              .panel
                .field
                  .row
                    .small-3.column
                      %label.right
                        Bank Name
                    .small-9.columns
                      =@bank_account.name
                .field
                  .row
                    .small-3.columns
                      %label.right
                        Bank Address
                    .small-9.columns
                      =@bank_account.address.html_safe
                .field
                  .row
                    .small-3.columns
                      %label
                        Bank Branch
                    .small-9.columns
                      = @bank_account.place
                .field
                  .row
                    .small-3.columns
                      %label
                        Bank IFSC Code
                    .small-9.columns
                      = @bank_account.ifsc_code
                .field
                  .row
                    .small-3.columns
                      %label
                        Account no
                    .small-9.columns
                      = @bank_account.account_no
                .field
                  .row
                    .small-3.columns
                      %label
                        Card Number
                    .small-9.columns
                      = @bank_account.card_no
                .field
                  .row
                    .small-3.columns
                      %label
                        Card CSC
                    .small-9.columns
                      = @bank_account.card_csc
            = link_to 'Edit', edit_bank_account_path(@bank_account)
            \|
            = link_to 'Back', user_extras_user_info_path
          .small-12.medium-4.large-3.columns
