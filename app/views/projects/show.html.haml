.dashboard-wrapper
  .row
    .small-12.columns
      .dashboard-inner.custom-container
        .row
          .small-12.columns
            %p#notice= notice

            %p
              %b Title:
              = @project.title
            %p
              %b Description:
              = @project.description.html_safe
            %p
              %b Creator:
              = @project.creator
            %p
              %b Skills:
              - @project.skills.each do |s|
                = s.name

            %p
              %b Min budget:
              = @project.min_budget
            %p
              %b Max budget:
              = @project.max_budget
            %p
              %b Duration:
              = @project.duration
            %p
              %b Developer:
              = @project.assigned_to

            = link_to 'Edit', edit_project_path(@project)
            \|
            = link_to 'Back', projects_path


