%section.contact-us
  .row
    .small-12.medium-8.large-8.columns
      .google-map
        %iframe{:frameborder => "0", :height => "400", :src => "https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d31416.514796148174!2d76.4777074939134!3d10.17542503055516!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1427196021771", :style => "border:0", :width => "100%"}
    .small-12.medium-4.large-4.columns
      .contact-box
        %h3
          Contact Us
        %section.contact-form
          %form{:action=>'#',:method=>'post'}
            .row
              .small-12.columns
                %input{:type=>"text",:placeholder=>"Name"}
            .row
              .small-12.columns
                %input{:type=>"text",:placeholder=>"Email"}
            .row
              .small-12.columns
                %textarea{:rows=>10,:placeholder=>"Message"}
            .row
              .small-12.columns
                %button.button.small.right
                  Send
