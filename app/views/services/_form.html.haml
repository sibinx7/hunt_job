= form_for @service do |f|
  - if @service.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service.errors.count, "error")} prohibited this service from being saved:"
      %ul
        - @service.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :creator
    = f.number_field :creator
  .field
    = f.label :service_image
    = f.text_field :service_image
  .field
    = f.label :service_link
    = f.text_field :service_link
  .actions
    = f.submit 'Save'
